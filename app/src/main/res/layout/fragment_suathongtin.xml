<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".XuLifragment.SuaThongTinFragment">


    <LinearLayout
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="300dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtdetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="20dp"
            android:text="Họ tên: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtdetext1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Ngày sinh: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtdetext2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="10dp"
            android:text="Địa chỉ: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtdetext3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="Gmail: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtdetext4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="10dp"
            android:text="Mật khẩu: "
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="300dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/txtHoTenEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:textSize="16dp"
            android:inputType="textPersonName"
             />

        <EditText
            android:id="@+id/txtNgaySinhedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:textSize="16dp"
            />

        <EditText
            android:id="@+id/txtGmailEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:textSize="16dp" />

        <EditText
            android:id="@+id/txtDiaChiEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="************"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnLuuTT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="150dp"
        android:onClick="LuuTTne"
        android:text="Lưu"
        tools:ignore="UsingOnClickInXml" />

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="126dp"
        android:layout_height="117dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="140dp"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/txtmofolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="140dp"
        android:onClick="Mofolder"

        android:text="Đổi avatar"

        tools:ignore="UsingOnClickInXml" />
</FrameLayout>